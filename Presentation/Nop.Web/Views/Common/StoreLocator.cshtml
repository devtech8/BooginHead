@{
    ViewBag.Title = "Store Locator";
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";
}



<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script src="../../Scripts/Custom/storeLocator/handlebars-v1.3.0.js"></script>
<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="../../Scripts/Custom/storeLocator/jquery.storelocator.js"></script>
<link rel="stylesheet" type="text/css" href="../../Themes/BH/Content/map.css">

<script>
  $(function() {
    $('#map-container').storeLocator();
  });
</script>

<div>
    <img src="~/Themes/BH/Content/images/client/page-banners/FindAStore_Page.png" alt="Locate a BooginHead Dealer" />
</div>

<div id="store-locator-container" style="padding-top:20px;">
  <div id="page-header">
    <h1>Find BooginHead products at a boutique near you:</h1>
  </div>
      <br />
    <br />
    <span>Please note that not all boutiques carry all products and/or patterns.</span>
    <br />
    <br />

  <div id="form-container">
    <form id="user-location" method="post" action="#">
      <div id="form-input">
        <label for="address">Enter Address, City, or Zip Code:</label>
        <input type="text" id="address" name="address" />
      </div>
            
      <button id="submit" type="submit">Submit</button>
        <br />
        <br />
    </form>
  </div>

  <div id="map-container">
    <div id="loc-list">
      <ul id="list"></ul>
    </div>
    <div id="map"></div>
  </div>

    <br />
    <br />

    <div class="mapBottom">
        <p>BooginHead products can also be found at the following large retailers: Babies R Us, buybuy Baby, and Walmart</p>
    </div>
</div>

