@{
    ViewBag.Title = "Store Locator";
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";
}



<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script src="../../Scripts/Custom/storeLocator/handlebars-v1.3.0.js"></script>
<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="../../Scripts/Custom/storeLocator/jquery.storelocator.js"></script>
<link rel="stylesheet" type="text/css" href="../../Themes/BH/Content/map.css">

<script>
  $(function() {
    $('#map-container').storeLocator();
  });
</script>

<div id="store-locator-container">
  <div id="page-header">
    <h1>Search for Booginhead Products Near You</h1>
  </div>
      
  <div id="form-container">
    <form id="user-location" method="post" action="#">
      <div id="form-input">
        <label for="address">Enter Address or Zip Code:</label>
        <input type="text" id="address" name="address" />
      </div>
            
      <button id="submit" type="submit">Submit</button>
    </form>
  </div>

  <div id="map-container">
    <div id="loc-list">
      <ul id="list"></ul>
    </div>
    <div id="map"></div>
  </div>
</div>

